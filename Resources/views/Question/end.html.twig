    <div class="col-md-offset-2 col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading text-center">{{ 'qcm_public.questionnaire.end.title'|trans }}</div>

            <div class="panel-body text-center">
                {{ 'qcm_public.questionnaire.end.content'|trans|raw }}

                <div class="span7 text-center">
