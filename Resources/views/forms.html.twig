{% extends 'form_div_layout.html.twig' %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="form-group has-error">
                {% for error in errors %}
                    <div class="control-label col-sm-12">{{
                        error.messagePluralization is null
                        ? error.messageTemplate|trans(error.messageParameters, 'validators')
                        : error.messageTemplate|transchoice(error.messagePluralization, error.messageParameters, 'validators')
                        }}</div>
                {% endfor %}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block form_start %}
    {% spaceless %}
        {% set attr = attr|merge({'class': attr.class|default('') ~ ' form-horizontal col-sm-12 text-center'}) %}
        {{ parent() }}
    {% endspaceless %}
{% endblock form_start %}

{% block form_widget_simple %}
    {% spaceless %}
        {% set attr = attr|merge({'class': attr.class|default('') ~ ' form-control'}) %}
        {% set type = type|default('text') %}

        {% if 'file' == type %}
            <span class="btn-primary btn-lg file-overlay"><i class="icon-folder-open"></i> {{ 'qcm_admin.label.choose_file'|trans }}</span>
        {% endif %}

        {% if 'text' == type %}
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ parent() }}
                </div>
            </div>
        {% else %}
            {{ parent() }}
        {% endif %}
    {% endspaceless %}
{% endblock form_widget_simple %}

{% block form_label %}
    {% if label is not sameas(false) -%}
        {% set label_attr = label_attr|merge({'class': label_attr.class|default('') ~ ''}) %}

        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif %}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif %}
        {% if label is empty -%}
            {% set label = name|humanize %}
        {%- endif -%}

        {% if form.parent.vars.label_raw %}
            <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
                {{ 'qcm_core.label.answer_number'|trans({'%number%': form.vars.name + 1}, translation_domain) }}
                <div class="answer">{{ label|trans({}, translation_domain)|raw }}</div>
            </label>
        {% else %}
            <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
            {{ label|trans({}, translation_domain) }}
        </label>
        {% endif %}
    {%- endif %}
{% endblock form_label %}

{% block form_row %}
    {% spaceless %}
        <div class="{{ form_group_class }} row">
            {{ form_label(form) }}
            <div class="{{ row_class }}">
                {{ form_widget(form) }}
                {{ form_errors(form) }}
            </div>
        </div>
    {% endspaceless %}
{% endblock form_row %}

{% block checkbox_widget %}
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
{% endblock checkbox_widget %}

{% block textarea_widget %}
    {% set attr = attr|merge({'class': attr.class|default('') ~ ' form-control'}) %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
{% endblock textarea_widget %}

{% block choice_widget_collapsed %}
    {% spaceless %}
        {% set attr = attr|merge({'class': attr.class|default('') ~ ' form-control'}) %}
        {{ parent() }}
    {% endspaceless %}
{% endblock choice_widget_collapsed %}

{% block choice_widget_expanded -%}
    <div {{ block('widget_container_attributes') }}>
        {%- for child in form %}
            <div class="panel panel-default">
                <div class="panel-body">
                    {{- form_widget(child) -}}
                    {{- form_label(child) -}}
                </div>
            </div>
        {% endfor -%}
    </div>
{% endblock choice_widget_expanded %}
